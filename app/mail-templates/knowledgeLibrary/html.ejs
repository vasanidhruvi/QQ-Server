  <div style="-webkit-box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.35);
    -moz-box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.35);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.35);
    width: 90%;
    margin: 0 auto;
    border-radius: 10px;
    overflow:hidden;">
